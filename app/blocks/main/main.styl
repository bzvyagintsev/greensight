.main
    font-size: 0.75rem

    +to-width($desktop)
        background: url('../images/pepyaka.svg') no-repeat left 50%
  
    .pepyaka
        flex: 1 1 100%

        &__bg
            position: absolute
            z-index: -1
            left: 50%
            transform: translateX(-50%)

            +to-width($desktop)
                display: none 
                  
        &__canvas
            position: absolute

            +to-width($desktop)
                display: none

        &__annotations
            display: flex
            justify-content: flex-end
            flex-flow: column wrap
            
            min-height: 48rem

            +to-width($desktop)
                justify-content: space-around

                min-height: 617px
                padding: 5em 0

        &__row
            flex 0 0 100%

            display: flex
            flex-flow: row wrap
            justify-content: space-between
         
            +desktop()
                &--1
                    margin: 2em 0 auto
                            
                // &--2
                    // align-items: flex-end
                    
                &--3
                    // align-self: flex-end

                    margin-top: 8.75em

        &__item
            height: 100%

            font-size: 0.75625rem
            line-height: 1.5
            
            +mobile()
                flex: auto

                margin-bottom: 1em  
            
            +to-width($desktop)
                padding: 0.75em

                background: rgba(255,255,255,0.4)

                &--1,
                &--3
                    flex: 0 1 50%

                &--2,
                &--4
                    flex: 0 1 48%
                
                &--5
                    flex: 0 1 100%

            +desktop()
                &--1
                    flex: 0 1 32%
                                        
                &--2
                    flex: 0 1 20%
                    margin-right: 20%
                    
                    text-align: right

                &--3
                    flex: 0 1 24%
                    
                &--4
                    flex: 0 1 22%
                    
                    margin-left: auto

                &--5
                    flex: 1
